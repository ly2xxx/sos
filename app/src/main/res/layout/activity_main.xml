<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_emergency"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="@drawable/card_background"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ†˜ Emergency SOS"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Getting location..."
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Location: Unknown"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŒ Country: Detecting..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center" />

        </LinearLayout>

        <!-- Emergency Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Services"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Police Button -->
            <Button
                android:id="@+id/btn_police"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="ðŸš” Police\nLoading..."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_police"
                android:layout_marginBottom="12dp"
                android:enabled="false"
                android:elevation="4dp" />

            <!-- Ambulance Button -->
            <Button
                android:id="@+id/btn_ambulance"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="ðŸš‘ Ambulance\nLoading..."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_ambulance"
                android:layout_marginBottom="12dp"
                android:enabled="false"
                android:elevation="4dp" />

            <!-- Fire Button -->
            <Button
                android:id="@+id/btn_fire"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="ðŸš’ Fire Department\nLoading..."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_fire"
                android:layout_marginBottom="12dp"
                android:enabled="false"
                android:elevation="4dp" />

            <!-- General Emergency Button -->
            <Button
                android:id="@+id/btn_general"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="ðŸ†˜ General Emergency\nLoading..."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_general"
                android:layout_marginBottom="16dp"
                android:enabled="false"
                android:elevation="4dp" />

        </LinearLayout>

        <!-- Browse Countries Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Browse Emergency Contacts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btn_browse_countries"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ðŸŒ Browse All Countries"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_blue_dark"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

        </LinearLayout>

        <!-- Instructions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â„¹ï¸ Instructions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ This app works offline using your GPS location\nâ€¢ Tap any emergency button to call local emergency services\nâ€¢ Emergency numbers are automatically selected based on your location\nâ€¢ Browse all countries to see emergency numbers worldwide\nâ€¢ Make sure location services are enabled for accurate country detection"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
